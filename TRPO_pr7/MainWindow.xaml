<Window x:Class="TRPO_pr7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TRPO_pr7"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="900">
    <Window.Resources>
        <local:User x:Key="CurrentUser"/>
    </Window.Resources>
    <Window.DataContext>
        <Binding Source="{StaticResource CurrentUser}"/>
    </Window.DataContext>
    <DockPanel>
        <WrapPanel DockPanel.Dock="Top" Height="400">
            <Grid Width="290" Margin="5">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="190"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <Label Content="Фамилия"/>
                <TextBox Grid.Column="1" Margin="0 2"/>

                <Label Grid.Row="1" Content="Имя"/>
                <TextBox Grid.Row="1" Grid.Column="1" Margin="0 2"/>

                <Label Grid.Row="2" Content="Отчество"/>
                <TextBox Grid.Row="2" Grid.Column="1" Margin="0 2"/>

                <Label Grid.Row="3" Content="Специализация"/>
                <TextBox Grid.Row="3" Grid.Column="1" Margin="0 2"/>

                <Label Grid.Row="4" Content="Пароль"/>
                <TextBox Grid.Row="4" Grid.Column="1" Margin="0 2"/>
            </Grid>
            <WrapPanel Width="290" Margin="5">
                <TextBox/>
            </WrapPanel>
            <WrapPanel Width="290" Margin="5">
                <TextBox/>
            </WrapPanel>
        </WrapPanel>
        <Label DockPanel.Dock="Bottom" Height="35"/>
    </DockPanel>
</Window>
